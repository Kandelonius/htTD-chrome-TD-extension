{
    "manifest_version": 2,
    "name": "tutorial app",
    "description": "Quick background color changer",
    "version": "1.0.0",
    "icons": {"128":"medium-face.jpg"},
    "browser_action":{
        "default_icon": "tiny-face.jpg",
        "default_popup": "popup.html"
    },
    "background":{
        "scripts":["popup.js"],
        "persistent":false
    },
    "permissions": ["activeTab", "storage"]
}